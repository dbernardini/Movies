<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/poster"
        android:layout_width="91dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:src="@color/colorPrimary"
        android:padding="5dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:paddingRight="5dp"
        android:layout_toRightOf="@id/poster">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Harry Potter e il prigioniero di Azkaban - Parte 2"
            />

        <TextView
            android:id="@+id/director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Director: Ridley Scott"
            android:textColor="@color/textColorSecondary"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Duration: 123 minutes"
            android:textColor="@color/textColorSecondary"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Genre: Fantasy, Thriller"
            android:textColor="@color/textColorSecondary"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Cast: Russel Crowe, Vin Diesel, Emma Watson, Daniel Radcliffe"
            android:textColor="@color/textColorSecondary"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/showtimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Showtimes: 18:00 - 18:50 - 19:30 - 21:00 -  18:00 - 18:50 - 19:30 - 21:00"
            android:textColor="@color/textColorSecondary"
            android:paddingLeft="5dp"/>

    </LinearLayout>

</RelativeLayout>