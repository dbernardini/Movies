<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/movie_poster_list"
        android:layout_width="60dp"
        android:layout_height="85dp"
        android:layout_alignParentLeft="true"
        android:src="@color/colorPrimary"
        android:padding="5dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_toRightOf="@id/movie_poster_list">

        <TextView
            android:layout_weight="1"
            android:id="@+id/movie_title_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/movie_poster_list"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Harry Potter e il prigioniero della camera oscura - parte 2"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/movie_year_list"
            android:layout_width="wrap_content"
            android:layout_below="@id/movie_title_list"
            android:layout_toRightOf="@id/movie_poster_list"
            android:layout_height="33dp"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Il Cavaliere oscuro, Batman begins, Harry Potter e i doni della morte parte 1"
            android:textColor="@color/textColorSecondary"
            android:paddingLeft="5dp"/>

    </LinearLayout>

</RelativeLayout>